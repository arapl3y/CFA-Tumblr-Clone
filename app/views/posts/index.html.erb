<p id="notice"><%= notice %></p>

<div class="row blog-post">
    <div class="col-xs-12 col-sm-12">
        <% @posts.each do |post| %>
        <div class=" well">
            <div class="title">
                <h1><%= post.title %></h1>
                <p>
                    <i>-
                        <%= post.user.email %>
                        <br>
                        <%= post.created_at.strftime('%m/%d/%Y') %></i>
                </p>

                <div class="row icons">

                    <%= link_to icon('eye'), post %>
                    <%= link_to icon('pencil'), edit_post_path(post) %>
                    <%= link_to icon('trash'), post, method: :delete, data: { confirm: 'Are you sure?'} %>

                    <%= social_share_button_tag(post.content) %>
                </div>
            </div>

            <p><%= post.content %></p>

        </div>

        <% end %>

    </div>
</div>
